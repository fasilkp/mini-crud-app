<div class="table-main">

  <div class="table-container">
    <div class="container">
      {{#if userDeleted}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>User Deleted successfully</strong>
        <a href="/admin/remove-alert" class="btn-close"></a>
      </div>
      {{/if}}
      {{#if userUpdated}}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>User Updated Successfully</strong>
        <a href="/admin/remove-alert" class="btn-close"></a>
      </div>
      {{/if}}
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>
              <a href="/admin/update-user/{{this._id}}" class="btn btn-primary">Edit</a>
              <button class="btn btn-danger"
                onclick="if(confirm('Are You Sure delete user ? ')){window.location.href='/admin/delete-user/{{this._id}}'}">Delete</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
